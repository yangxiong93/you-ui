.you-ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.you-multi-ellipsis--l2 {
  -webkit-line-clamp: 2;
}
.you-multi-ellipsis--l2,
.you-multi-ellipsis--l3 {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
}
.you-multi-ellipsis--l3 {
  -webkit-line-clamp: 3;
}
.you-clearfix:after {
  display: table;
  clear: both;
  content: '';
}
.you-hairline,
.you-hairline--bottom,
.you-hairline--left,
.you-hairline--right,
.you-hairline--surround,
.you-hairline--top,
.you-hairline--top-bottom {
  position: relative;
}
.you-hairline--bottom:after,
.you-hairline--left:after,
.you-hairline--right:after,
.you-hairline--surround:after,
.you-hairline--top-bottom:after,
.you-hairline--top:after,
.you-hairline:after {
  position: absolute;
  box-sizing: border-box;
  -webkit-transform-origin: center;
  transform-origin: center;
  content: ' ';
  pointer-events: none;
  top: -50%;
  right: -50%;
  bottom: -50%;
  left: -50%;
  border: 0 solid #eee;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
}
.you-hairline--top:after {
  border-top-width: 1px;
}
.you-hairline--left:after {
  border-left-width: 1px;
}
.you-hairline--right:after {
  border-right-width: 1px;
}
.you-hairline--bottom:after {
  border-bottom-width: 1px;
}
.you-hairline--top-bottom:after {
  border-width: 1px 0;
}
.you-hairline--surround:after {
  border-width: 1px;
}
.you-row:after {
  display: table;
  clear: both;
  content: "";
}

